/* components/song-item/song-item.wxss */
.content{
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
}

.content .image {
    flex-shrink: 0;
    width: 128rpx;
    height: 128rpx;
    border-radius: 16rpx;
}

.content .info {
    display: flex;
    box-sizing: border-box;
    justify-content: space-between;
    align-items: center;
    padding: 0 16rpx;
    width: 100%;
}

.content .info .name .song {
    margin-bottom: 16rpx;
}

.content .info .name .artist{
    margin-bottom: 16rpx;
    font-size: 12px;
    color: #888;
}