/* components/play-list/play-list.wxss */
.content {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.content .shade {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
}

.content .song{
    position: absolute;
    left: 50%;
    bottom: 2%;
    width: 90%;
    height: 60%;
    background-color: white;
    border-radius: 16rpx;
    transition: all 0.2s linear;
}

.show {
    transform: translate(-50%, 0%);
}

.hide {
    transform: translate(-50%, 104%);
}

.song .head {
    display: flex;
    justify-content: space-between;
    padding: 16rpx 24rpx;
    border-bottom: 1px solid #ccc;
}

.song .list {
    box-sizing: border-box;
    padding: 0 24rpx;
}

.list .item {
    display: flex;
    justify-content: space-between;
    margin: 24rpx 0;
}

.info .name {
    margin-right: 16rpx;
    font-size: 32rpx;
}

.info .singer {
    font-size: 28rpx;
}