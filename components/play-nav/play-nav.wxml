<!-- 自定义导航栏 -->
<view class="nav-bar">
    <view class="status" style="height: {{ statusHeight }}px;"></view>
    <view class="nav">
        <view class="left" bind:tap="skipBack">
            <view class="left-slot">
                <slot name="left"></slot>
            </view>
        </view>
        <view class="center">
            <view class="center-slot">
                <slot name="center"></slot>
            </view>
        </view>
        <view class="right"></view>
    </view>
</view>
